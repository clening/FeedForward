# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# RSS Feed & Keyword Configuration
# Copy the .example files and rename them (remove .example)
# Then customize them for your needs
KEYWORDS_FILE=keywords.txt
FEEDS_FILE=feeds.opml

# Processing Configuration
OUTPUT_DIR=output
DAYS_BACK=5

# Email Configuration (optional)
# Leave blank to skip emailing reports
# Requires ssmtp or similar to be configured on your system
EMAIL_ADDRESS=

# Obsidian Vault Configuration
# Set this to the path where you want processed notes saved
# Can be relative (./processed) or absolute (/path/to/obsidian/vault)
OBSIDIAN_VAULT_PATH=./processed

# Article Processing Settings
# Lower values (2-3) help avoid Claude API rate limits (30k tokens/min)
# Higher values (5+) may cause rate limit errors with large batches
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3

# Content Fetching Settings
# Jina Reader is a free service for fetching article content
USE_JINA_READER=true
# Fallback to Playwright for tough sites (slower but more reliable)
USE_PLAYWRIGHT_FALLBACK=true
